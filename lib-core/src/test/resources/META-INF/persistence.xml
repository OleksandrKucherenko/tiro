<?xml version="1.0" encoding="UTF-8"?>
<!-- Schemas: http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/persistence/index.html -->
<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
            http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <!-- Unit testing persistence unit. -->
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>com.objectdb.jpa.Provider</provider>
        <class>com.tiro.entities.Role</class>
        <properties>
            <property name="javax.javax.javax.persistence.jdbc.url" value="testing.tmp;drop"/>
            <property name="javax.javax.javax.persistence.jdbc.user" value="admin"/>
            <property name="javax.javax.javax.persistence.jdbc.password" value="admin"/>
        </properties>
    </persistence-unit>
</persistence>